<%= form_for(@rfi) do |f| %>
  <% if @rfi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rfi.errors.count, "error") %> prohibited this rfi from being saved:</h2>

      <ul>
      <% @rfi.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Project" %>
    <%= collection_select(:rfi, :project_id, Project.all, :id, :name) %>
  </div>
  
  <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date_requested %><br />
    <%= f.date_select :date_requested %>
  </div>
  <div class="field">
    <div id="date">
    <%= f.label :date_answered %><br />
    <%= f.date_select :date_answered %>
    </div>
    <div id="answer">
    Not Answered <%= check_box_tag "rfi[not_answered]" %>
    </div>
  </div>
  <div class="field">
    <%= f.label "RFI Attachment" %>
    <%= f.file_field :rfipdf %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
    $('#answer').click(function() {
      $('#date').toggle();
    });
</script>
