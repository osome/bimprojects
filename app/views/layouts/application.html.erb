<!DOCTYPE html>
<html>
<head>
  <title>Projectsapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<div id="navbar">
				<div id="user_nav">
					<% if current_employee %>
					 Logged in as <%= current_employee.name %>.
					 <%= link_to "Log out", logout_path %>		 
					<% else %>
					<%= link_to "log in", login_path %>		 
					<% end %>
				</div>
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				
				<ul>
					<li><%= link_to "Home", "/" %></li>
					<li><%=link_to "Projects", projects_path %></li>
					<li><%=link_to "Employee Directory", employees_path %></li>
				</ul>				
			</div>
		</div>


<%= yield %>
	</div>
</body>
</html>
